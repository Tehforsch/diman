#!/bin/bash

diff=$(cargo fmt -- --check)
result=$?

if [[ ${result} -ne 0 ]] ; then
    cat <<\EOF
There are some code style issues, run `cargo fmt` first.
EOF
fi

for float in default-f32, default-f64, "" ; do
    for glam in glam, "" ; do
        for dim in default-2d, default-3d, "" ; do
            echo cargo test --no-default-features --features "${dim}${float}${glam},mpi,rand,serde,hdf5"
            if ! cargo test --no-default-features --features "${dim}${float}${glam},mpi,rand,serde,hdf5"
            then
                echo "There are some test issues."
                exit 1
            fi
        done
    done
done

exit 0

diff=$(cargo fmt -- --check)
result=$?

if [[ ${result} -ne 0 ]] ; then
    cat <<\EOF
There are some code style issues, run `cargo fmt` first.
EOF
    exit 1
fi
